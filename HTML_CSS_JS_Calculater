<body>
    <div class="container">
        <div id="display"></div>
        <div class="buttons">
            <div class="operator" onclick="appendOperator('+')">+</div>
            <div class="operator" onclick="appendOperator('-')">-</div>
            <div class="operator" onclick="appendOperator('*')">*</div>
            <div class="operator" onclick="appendOperator('/')">/</div>
            <div class="operator" onclick="clearScreen()">AC</div>
            <div class="number" onclick="appendNumber('9')">9</div>
            <div class="number" onclick="appendNumber('8')">8</div>
            <div class="number" onclick="appendNumber('7')">7</div>
            <div class="operator" onclick="deleteNumber()">DEL</div>
            <div class="number" onclick="appendNumber('6')">6</div>
            <div class="number" onclick="appendNumber('5')">5</div>
            <div class="number" onclick="appendNumber('4')">4</div>
            <div class="operator" onclick="calculate()">=</div>
            <div class="number" onclick="appendNumber('3')">3</div>
            <div class="number" onclick="appendNumber('2')">2</div>
            <div class="number" onclick="appendNumber('1')">1</div>
            <div class="operator" onclick="appendOperator('.')">.</div>
            <div class="number" onclick="appendNumber('0')">0</div>
        </div>
    </div>

    <script>
let display = document.getElementById('display');
let previousOperand = '';
let currentOperand = '';
let operator = '';

function appendNumber(number) {
    currentOperand += number;
    display.textContent = currentOperand;
}

function appendOperator(op) {
    if (currentOperand) {
        previousOperand = currentOperand;
        currentOperand = '';
        operator = op;
    }
}

function calculate() {
    if (currentOperand && operator) {
        let result = eval(previousOperand + operator + currentOperand);
        previousOperand = result;
        currentOperand = '';
        operator = '';
        display.textContent = result;
    }
}
function clearScreen(){
    location.reload();

}
function deleteNumber(){
   
currentOperand.value=currentOperand.slice(0, - 1);
}
    



</script>
</body>
</html>
