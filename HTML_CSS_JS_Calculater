    width: 300px;
    margin: 50px auto;
    background-color: #f2f2f2;
    border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
}

#display {
    width: 100%;
    height: 50px;
    background-color: #fff;
    border-radius: 10px 10px 0 0;
    padding: 10px;
    font-size: 24px;
    text-align: right;
    justify-content: center;
    margin: auto;
}

.buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 10px;
}

.operator, .number {
    width: 60px;
    height: 60px;
    background-color: #ccc;
    border-radius: 10px;
    text-align: center;
    line-height: 60px;
    cursor: pointer;
}

.operator {
    background-color: #e9e9e9;
}

.operator:hover, .number:hover {
    background-color: #ddd;
}

